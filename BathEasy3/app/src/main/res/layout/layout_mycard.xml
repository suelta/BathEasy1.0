<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_gray2">

    <RelativeLayout
        android:id="@+id/myc_rl_card"
        android:layout_margin="@dimen/big_margin"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/pictureshape">
        <TextView
            android:id="@+id/myc_tv_kh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/fontWS"
            android:text="卡号："/>
        <TextView
            android:id="@+id/myc_tv_cardid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13598989999"
            style="@style/fontWS"
            android:layout_toRightOf="@+id/myc_tv_kh"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_21"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/myc_tv_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额："
            style="@style/fontWS"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/myc_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00元"
            android:textStyle="bold"
            style="@style/fontWS"
            android:layout_toRightOf="@+id/myc_tv_yue"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/myc_rl_card"
        style="@style/bg_line2"/>

    <TableLayout
        android:layout_below="@+id/myc_rl_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        android:layout_marginTop="20sp">
        <TableRow>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_margin">
                <ImageView
                    android:id="@+id/myc_im_cz"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/medium_margin"
                    android:src="@drawable/card_recharge"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/myc_im_cz"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_margin">
                <ImageView
                    android:id="@+id/myc_im_recoder"
                    android:layout_centerHorizontal="true"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:src="@drawable/card_recoder"
                    android:layout_marginBottom="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户明细"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/myc_im_recoder"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_margin"
                android:gravity="center">

            </RelativeLayout>
        </TableRow>

    </TableLayout>


</RelativeLayout>
