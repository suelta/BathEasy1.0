<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0">

        <!--头像与昵称-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightBlue">

                <ImageView
                    android:id="@+id/info_touxiang"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_all_gray"
                    android:src="@drawable/icon_touxiang" />

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_touxiang"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:text="昵称"
                    android:textColor="#FFF"
                    android:textSize="@dimen/info_font_size" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tablerow_info"
            android:padding="5dp"
            android:background="@drawable/border_all_gray">
            <TableLayout>
                <TableRow>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="#0000"
                        android:src="@drawable/icon_info" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="个人信息"
                        android:textSize="@dimen/info_font_size" />
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tablerow_cardinfo"
            android:padding="5dp"
            android:background="@drawable/border_all_gray">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:background="#0000"
                            android:src="@drawable/icon_card" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="卡信息"
                            android:layout_marginRight="@dimen/huge_margin"
                            android:textSize="@dimen/info_font_size"/>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/info_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0.00元"
                    android:textColor="#000000"
                    android:textSize="@dimen/info_font_size"
                    android:layout_marginRight="@dimen/medium_margin"/>
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tablerow_credit"
            android:padding="5dp"
            android:background="@drawable/border_all_gray">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:background="#0000"
                            android:src="@drawable/icon_credit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="信用积分"
                            android:textSize="@dimen/info_font_size" />

                    </TableRow>
                </TableLayout>
                <TextView
                    android:id="@+id/info_tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0分"
                    android:textColor="#000000"
                    android:textSize="@dimen/info_font_size"
                    android:layout_marginRight="@dimen/medium_margin" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tablerow_billinfo"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_all_gray">
            <TableLayout>
                <TableRow>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="#0000"
                        android:src="@drawable/icon_billinfo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="账单详情"
                        android:textSize="@dimen/info_font_size"/>
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tablerow_option"
            android:padding="5dp"
            android:background="@drawable/border_all_gray">
            <TableLayout>
                <TableRow>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="#0000"
                        android:src="@drawable/icon_option" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="意见反馈"
                        android:textSize="@dimen/info_font_size" />
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tablerow_question"
            android:padding="5dp"
            android:background="@drawable/border_all_gray">
            <TableLayout>
                <TableRow>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="#0000"
                        android:src="@drawable/icon_qestion" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="常见问题"
                        android:textSize="@dimen/info_font_size" />
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tablerow_setting"
            android:padding="5dp"
            android:background="@drawable/border_all_gray"
           >
            <TableLayout>
                <TableRow>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="#0000"
                        android:src="@drawable/icon_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="设置"
                        android:textSize="@dimen/info_font_size" />
                </TableRow>
            </TableLayout>
        </TableRow>

    </TableLayout>
</RelativeLayout>
